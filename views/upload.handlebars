<!doctype html>

<html>
<head>
	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width">

    <title>Upload</title>

	<link href="css/bootstrap.css" rel="stylesheet"></link>
	<link href="css/bootstrap-theme.css" rel="stylesheet"></link>
	<link href="css/smartalbum.css" rel="stylesheet"></link>
	<link rel="stylesheet" type="text/css" href="css/bootstrap-material-design.css"></link>
  	<link rel="stylesheet" type="text/css" href="css/ripples.min.css"></link>
	
	<!--<script class="jsbin" src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>-->
	<script src="js/jquery.min.js"></script>
	<script class="jsbin" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.0/jquery-ui.min.js"></script>
	<link class="jsbin" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1/themes/base/jquery-ui.css" rel="stylesheet" type="text/css"></link>
	<script src="js/bootstrap.min.js"></script>


</head>

<body>
	
	<div class="container upload-header">
		<div class="row">
			<div align="left" class="col-xs-4" id="uploadHeaderBtn">
				<a href="index" class="btn-default">
					<i class="material-icons" style = "color: #fff; background-color: #000">Back</i>
				</a>
			</div>
			<div class="col-xs-4">
				<h2 align="center">Upload</h2>
			</div>
		</div>
	</div>	
	
	<div class="container">
		<div class="row">
		<form id="file-form" align = "center">
  			<input type="file" name = "file" placeholder="Choose a file" style="color: #fff;" id="file-select" accept="image/*" name="photos[]">
			<!-- TODO: add multiple input -->
		</form>	
		</div>
	</div>
	
	<br>
	<div class="container">
		<a data-toggle="modal">
        	<div align="center" class="col-xs-8">	
						<button id="uploadHeaderBtn" type="button" onclick="categorize()" class="btn btn-default btn-lg">Categorize Me!</button>
			</div>
               
        </a>
					
	</div>

	<div class="modal fade" id="getCodeModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
   <div class="modal-dialog modal-lg">
      <div class="modal-content">
       <div class="modal-header">
         <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
         <h4 class="modal-title" id="myModalLabel">Tags Generated:</h4>
       </div>
       <div class="modal-body" id="getCode" style="overflow-x: scroll;">

       </div>
    </div>
   	</div>
 	</div>

	<script src="js/fileUpload.js"></script>

</body>

</html>
